<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="complexButtonStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="calculationStyle">
        <item name="android:ems">10</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="resultsStyle">
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="calculatorButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">70dp</item>
        <item name="android:textColor">@color/deep_orange_700</item>
    </style>

    <style name="numberButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">70dp</item>
    </style>
</resources>